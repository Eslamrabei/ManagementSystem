@using Demo.PL.Models.RoleModule
@model IEnumerable<RoleViewModel>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="_ToastsPartialView"></partial>
<h1>All Roles</h1>
<br />
<br />
<a class="btn btn-primary" asp-controller="Role" asp-action="Create">Create Role</a>
<br />
<div class="m-2">
	<form class="row offset-2" asp-action="Index" method="get">
		<div class="col-8">
			<input class="form-control" type="text" name="SearchValue" placeholder="Search by role name" />
		</div>
		<div class="col-4">
			<input type="submit" class="btn btn-outline-dark" value="Search" />
		</div>
	</form>
</div>
@if (Model.Count() > 0)
{
	<table class="table table-striped table-hover mt-3">
		<thead class="text-center">
			<tr>
				<th>@Html.DisplayNameFor(r => r.Id)</th>
				<th>@Html.DisplayNameFor(r => r.Name)</th>
				<th>Details </th>
				<th>Update</th>
				<th>Assign to user</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody class="text-center">
			@foreach (var role in Model)
			{
				<tr>
					<td>@Html.DisplayFor(u => role.Id)</td>
					<td>@Html.DisplayFor(u => role.Name)</td>
					<td>
						<a asp-action="Details" asp-route-Id="@role.Id"
						   class="btn btn-outline-primary btn-sm rounded-pill shadow-sm">
							<i class="fa-solid fa-eye"></i> Details
						</a>
					</td>

					<td>
						<a asp-action="Edit" asp-route-Id="@role.Id"
						   class="btn btn-outline-success btn-sm rounded-pill shadow-sm">
							<i class="fa-solid fa-edit"></i> Edit
						</a>
					</td>
					<td>
						<a asp-action="AssignToUser" asp-controller="Role"
						   asp-route-roleId="@role.Id"
						   class="btn btn-outline-info btn-sm rounded-pill shadow-sm">
							<i class="bi bi-person-plus"></i> Assign to User
						</a>
					</td>

					<td>
						<button type="button" class="btn btn-outline-danger btn-sm rounded-pill shadow-sm" data-bs-toggle="modal" data-bs-target="#deleteModal-@role.Id">
							<i class="fas fa-trash"></i> Delete
						</button>
					</td>

					
					<!-- Delete Modal -->
					<div class="modal fade" id="deleteModal-@role.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
						<div class="modal-dialog">
							<div class="modal-content">
								<div class="modal-header">
									<h1 class="modal-title fs-5" id="exampleModalLabel">Delete Role</h1>
									<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
								</div>
								<div class="modal-body">
									Are You Sure to Delete this Role With Name : @role.Name?
								</div>
								<div class="modal-footer">
									<form method="post" asp-action="Delete" asp-controller="Role" asp-route-id="@role.Id" class="mt-4">
										<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
										<input type="submit" value="Delete" class="btn btn-danger" />
									</form>
								</div>
							</div>
						</div>
					</div>

				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div class="alert alert-info mt-3">
		<h2>No Roles Found !!</h2>
	</div>
}

