@model LogInViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<partial name="_ToastsPartialView"></partial>

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4 auth-card rounded-4">
        <h2 class="text-center mb-4 text-success fw-bold">Welcome Back</h2>

        <form asp-action="Login" method="post" novalidate>
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <!-- Email -->
            <div class="mb-3 input-group">
                <span class="input-group-text bg-success text-white"><i class="bi bi-envelope"></i></span>
                <input asp-for="Email" class="form-control" placeholder="Email" />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>

            <!-- Password -->
            <div class="mb-3 input-group">
                <span class="input-group-text bg-success text-white"><i class="bi bi-lock"></i></span>
                <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>

            <!-- Remember Me -->
            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                <label asp-for="RememberMe" class="form-check-label">Keep me signed in</label>
            </div>

            <!-- Submit -->
            <button type="submit" class="btn btn-success w-100 fw-bold py-2 rounded-pill">
                Sign In
            </button>
        </form>

        <p class="text-center mt-3 text-dark">
            Don’t have an account?
            <a asp-action="Register" class="text-warning fw-bold">Register Now!</a>
        </p>
        <p class="text-center mt-3 text-dark">
            Do you Forget Password?
            <a asp-action="ForgetPassword" class="text-warning fw-bold">Reset Password!</a>
        </p>
    </div>
</div>
