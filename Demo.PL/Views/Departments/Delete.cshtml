@using RouteG03.BLL.Dtos.DepartmentsDtos
@model DepartmentDetailsDto
@{
    ViewData["Title"] = "Delete Department";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white text-center">
                    <h4 class="mb-0">
                        <i class="fa-solid fa-triangle-exclamation"></i> Delete Department
                    </h4>
                </div>
                <div class="card-body">

                    <!-- Warning Alert -->
                    <div class="alert alert-warning d-flex align-items-center" role="alert">
                        <i class="fa-solid fa-circle-exclamation me-2"></i>
                        <div>
                            Are you sure you want to delete this department?
                            <strong>This action cannot be undone.</strong>
                        </div>
                    </div>

                    <!-- Tabs -->
                    <ul class="nav nav-tabs mb-3" id="departmentTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">
                                <i class="fa-solid fa-info-circle"></i> General
                            </a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" id="administration-tab" data-bs-toggle="tab" href="#administration" role="tab" aria-controls="administration" aria-selected="false">
                                <i class="fa-solid fa-user-gear"></i> Administration
                            </a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <!-- General Tab -->
                        <div class="tab-pane fade show active p-3" id="general" role="tabpanel" aria-labelledby="general-tab">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="Code" class="form-label fw-bold"></label>
                                    <input asp-for="Code" class="form-control" readonly />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Name" class="form-label fw-bold"></label>
                                    <input asp-for="Name" class="form-control" readonly />
                                </div>
                                <div class="col-12">
                                    <label asp-for="Description" class="form-label fw-bold"></label>
                                    <textarea asp-for="Description" class="form-control" rows="2" readonly></textarea>
                                </div>
                                <div class="col-12">
                                    <label asp-for="CreatedOn" class="form-label fw-bold"></label>
                                    <input asp-for="CreatedOn" class="form-control" readonly />
                                </div>
                            </div>
                        </div>

                        <!-- Administration Tab -->
                        <div class="tab-pane fade p-3" id="administration" role="tabpanel" aria-labelledby="administration-tab">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="CreatedBy" class="form-label fw-bold"></label>
                                    <input asp-for="CreatedBy" class="form-control" readonly />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="CreatedOn" class="form-label fw-bold"></label>
                                    <input asp-for="CreatedOn" class="form-control" readonly />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="LastModifiedBy" class="form-label fw-bold"></label>
                                    <input asp-for="LastModifiedBy" class="form-control" readonly />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="LastModifiedOn" class="form-label fw-bold"></label>
                                    <input asp-for="LastModifiedOn" class="form-control" readonly />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fa-solid fa-arrow-left"></i> Back to List
                        </a>

                        <form method="post" asp-controller="Departments" asp-action="Delete" asp-route-id="@Model.Id" class="d-inline">
                            <button type="submit" class="btn btn-danger">
                                <i class="fa-solid fa-trash"></i> Confirm Delete
                            </button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
