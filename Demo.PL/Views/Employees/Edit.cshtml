@using RouteG03.DAL.Models.Shared
@model EmployeeViewModel

@{
    ViewData["Title"] = "Edit Employee";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Edit Employee</h3>
                </div>
                <div class="card-body p-4">

                    <div class="text-center mb-4">
                        <img src="~/Files/Images/@(Model.Image ?? "user.jpg")"
                             class="rounded-circle shadow"
                             style="width: 120px; height: 120px; object-fit: cover; border: 3px solid #ddd;" />

                        <div class="d-flex justify-content-center gap-2 mt-3">
                            <!-- Delete Image -->
                            <form asp-controller="Employees" asp-action="DeleteImg" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash3"></i> Delete
                                </button>
                            </form>

                            <!-- Update Image -->
                            <form asp-action="UpdateImg" asp-route-id="@Model.Id" enctype="multipart/form-data" method="post" class="d-inline">
                                <div class="input-group input-group-sm" style="max-width: 250px;">
                                    <input type="file" name="photo" class="form-control form-control-sm" />
                                    <button type="submit" class="btn btn-outline-warning">
                                        <i class="bi bi-upload"></i> Update
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <div class="row g-3">
                            <partial name="PartialViews/CreateEditPartialView" model="Model"></partial>
                        </div>
                        <div class="mt-4 text-end">
                            <button type="submit" class="btn btn-success px-4 me-2">
                                <i class="bi bi-check-circle"></i> Save
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


