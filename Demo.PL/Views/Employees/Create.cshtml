@using RouteG03.DAL.Models.Shared
@model CreateEmployeeDto

@{
    ViewData["Title"] = "Create Employee";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-success text-white text-center">
                    <h3 class="mb-0">Create New Employee</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="SaveData" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <div class="row g-3">
                            @* @Html.Partial("_EmployeeFormPartial", Model) *@
                            <partial name="PartialViews/CreateEditPartialView" model="Model"></partial>

                        </div>
                        <div class="form-group col-6 mb-2">
                            <label asp-for="Image" class="control-label"></label>
                            <input asp-for="Image" class="form-control" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                        <div class="mt-4 text-end">
                            <button type="submit" class="btn btn-success px-4 me-2">
                                <i class="bi bi-plus-circle"></i> Create
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
