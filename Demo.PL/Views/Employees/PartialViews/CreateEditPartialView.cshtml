@inject IDepartmentServices _departmentService 
@model EmployeeViewModel
@{
	var departments = new SelectList(_departmentService.GetAllDepartments(), "Id", nameof(DepartmentsDto.Name));
}

<div class="form-group col-6 mb-2">
	<label asp-for="Name" class="control-label"></label>
	<input asp-for="Name" class="form-control" />
	<span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group col-6 mb-2">
	<label asp-for="Age" class="control-label"></label>
	<input asp-for="Age" class="form-control" />
	<span asp-validation-for="Age" class="text-danger"></span>
</div>
<div class="form-group col-6 mb-2">
	<label asp-for="Address" class="control-label"></label>
	<input asp-for="Address" class="form-control" />
	<span asp-validation-for="Address" class="text-danger"></span>
</div>
<div class="form-group col-6 mb-2">
	<label asp-for="Salary" class="control-label"></label>
	<input asp-for="Salary" class="form-control" />
	<span asp-validation-for="Salary" class="text-danger"></span>
</div>
<div class="form-group col-6 mb-2">
	<label class="form-label" asp-for="DepartmentId"></label>
	<select class="form-select" aria-label="Default select example" asp-for="DepartmentId" asp-items="departments">
		<option value="@null">Select Department</option>
	</select>
	<span asp-validation-for="DepartmentId" class="text-danger"></span>

</div>
<div class="form-group col-6 mb-2">
	<label asp-for="Email" class="control-label"></label>
	<input asp-for="Email" class="form-control" />
	<span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="form-group col-6 mb-2">
	<label asp-for="PhoneNumber" class="control-label"></label>
	<input asp-for="PhoneNumber" class="form-control" />
	<span asp-validation-for="PhoneNumber" class="text-danger"></span>
</div>
<div class="form-group col-6 mb-2">
	<label asp-for="HiringDate" class="control-label"></label>
	<input asp-for="HiringDate" type="date" class="form-control" />
	<span asp-validation-for="HiringDate" class="text-danger"></span>
</div>
<div class="col-6">
	<div class="form-group  mb-2">
		@foreach (var genderType in Enum.GetValues<Gender>())
		{
			@* <input class="form-check-input" type="radio" id="Gender_@genderType" /> *@
			@Html.RadioButtonFor(m => m.Gender, genderType, new { @class = "form-check-input", id = "Gender_" + genderType })
			<label class="form-check-label" for="Gender_@genderType">@genderType</label>
		}
	</div>
	<div class="form-group form-check mb-2">
		<label class="form-check-label">
			<input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
		</label>
	</div>
</div>
<div class="form-group col-6 mb-2">
	<select class="form-select" aria-label="Default select example" asp-for="EmployeeType" asp-items="@Html.GetEnumSelectList<EmployeeType>()">
		<option selected>Select Employee Type</option>
	</select>
	<span asp-validation-for="EmployeeType" class="text-danger"></span>

</div>
