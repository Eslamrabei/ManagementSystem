@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center my-5">
    <!-- Hero Section -->
    <div class="p-5 mb-4 bg-light rounded-3 shadow-sm">
        <div class="container py-5">
            <h1 class="display-3 fw-bold text-primary">
                <i class="bi bi-globe2"></i> Welcome to our MVC project
            </h1>
            <p class="lead mt-3 mb-4">
                Build modern, fast, and scalable web apps with <strong>ASP.NET Core</strong>.
            </p>

        </div>
    </div>

    <!-- Features Section -->
    <div class="row g-4 mt-4">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <i class="bi bi-lightning-charge-fill text-warning display-4 mb-3"></i>
                    <h5 class="card-title">Fast Development</h5>
                    <p class="card-text">ASP.NET Core makes it easy to build powerful apps quickly with modern tooling.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <i class="bi bi-shield-lock-fill text-primary display-4 mb-3"></i>
                    <h5 class="card-title">Secure by Default</h5>
                    <p class="card-text">Protect your apps with built-in authentication, authorization, and data protection.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <i class="bi bi-cloud-arrow-up-fill text-success display-4 mb-3"></i>
                    <h5 class="card-title">Cloud Ready</h5>
                    <p class="card-text">Deploy your applications seamlessly to Azure, AWS, or any cloud provider.</p>
                </div>
            </div>
        </div>
    </div>
</div>
